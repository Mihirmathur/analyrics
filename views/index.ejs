<script type="text/javascript">
	var s = $("input[name*='input1']"),
    s2 = $("input[name*='input2']"),
    f1  = $("form[name*='form1']"),
    f2 = $("form[name*='form2']"),
    a1 = $(".after[name*='after1']"),
    a2 = $(".after[name*='after2']"),
		m = $('h4'),
    p = $('p');

  $('#moveleft').click(function() {
        $('#everything').animate({
        'marginLeft' : "-=30px" //moves left
        });
    });

p.on('click', function(){
  $("div.songPrompt").replaceWith('<input class = "input2" name="input2" type="text" placeholder="Search for a song..." /><div name="after2" class="after"></div>');
  if( f2.hasClass('open') ) return;
  f2.addClass('in');
  setTimeout(function(){
    f2.addClass('open');
    f2.removeClass('in');
  }, 1300);
});

s.focus(function(){
  // alert("blah");
  if( f1.hasClass('open') ) return;
  f1.addClass('in');
  setTimeout(function(){
    f1.addClass('open');
    f1.removeClass('in');
  }, 1300);
});

a1.on('click', function(e){
  e.preventDefault();
  if( !f1.hasClass('open') ) return;
   s.val('');
  f1.addClass('close');
  f1.removeClass('open');
  setTimeout(function(){
    f1.removeClass('close');
  }, 1300);
})

a2.on('click', function(e){
  e.preventDefault();
  if( !f2.hasClass('open') ) return;
   s2.val('');
  f2.addClass('close');
  f2.removeClass('open');
  setTimeout(function(){
    f2.removeClass('close');
  }, 1300);
})

f1.submit(function(e){
  e.preventDefault();
  m.html('Thanks, high five!').addClass('show');
  f1.addClass('explode');
  setTimeout(function(){
    s.val('');
    f1.removeClass('explode');
    m.removeClass('show');
  }, 3000);
})

f2.submit(function(e){
  e.preventDefault();
  // m.html('Thanks, high five!').addClass('show');
  f2.addClass('explode');
  setTimeout(function(){
    s.val('');
    f2.removeClass('explode');
    m.removeClass('show');
  }, 3000);
})

	$('#submit').click(function(){
		var artist = $('#artist').val();
		var song = $('#song').val();
		window.location.href = '/'+artist+'/'+song;
	});

</script>
